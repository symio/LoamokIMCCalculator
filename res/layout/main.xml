<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/widget35"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	>
        <TextView
                android:id="@+id/widget36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
	    	android:gravity="center"
                android:textColor="#ff0000"
                android:textStyle="bold"
                android:text="@string/poidsLabel" />
        <EditText
                android:id="@+id/widget37"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/poidsHint"
                android:enabled="true"
                android:inputType="phone"
                android:numeric="decimal"
                android:textSize="18sp"
                android:layout_weight="1"
                />
    </LinearLayout>
    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	>
        <TextView
                android:id="@+id/widget38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#ff0000"
                android:text="@string/tailleLabel" />
        <EditText
                android:id="@+id/widget39"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tailleHint"
                android:inputType="phone"
                android:numeric="decimal"
                android:enabled="true"
                android:textSize="18sp"
                android:layout_weight="1"
                />
    </LinearLayout>
    <RadioGroup
            android:id="@+id/widget40"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <RadioButton
                android:id="@+id/widget41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/metreLabel" />
        <RadioButton
                android:id="@+id/widget42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/cmLabel" />
    </RadioGroup>
    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
        <Button
                android:id="@+id/widget44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/calculText"
                android:layout_weight="1"
	    	android:layout_marginLeft="25dip" 
	    	android:layout_marginRight="25dip"
                />
        <Button
                android:id="@+id/widget45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/razText"
                android:layout_weight="1"
	    	android:layout_marginLeft="25dip" 
	    	android:layout_marginRight="25dip"
                />
    </LinearLayout>
    <TextView
            android:id="@+id/widget47"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/noResText" />
</LinearLayout>
